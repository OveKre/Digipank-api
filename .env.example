# Server Configuration
PORT=3001
NODE_ENV=development

# Bank Configuration
BANK_PREFIX=DIGI
BANK_NAME=Digipank
CENTRAL_BANK_URL=https://api.testbank.ee
API_KEY=your-api-key-here

# MariaDB Database Configuration
DB_HOST=localhost
DB_PORT=3309
DB_NAME=digipank
DB_USER=root
DB_PASSWORD=admin123

# Docker MariaDB Configuration
MYSQL_ROOT_PASSWORD=admin123
MYSQL_DATABASE=digipank
MYSQL_USER=bankuser
MYSQL_PASSWORD=bankpass

# JWT Configuration
JWT_SECRET=your-very-secure-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=24h

# Cryptography Keys
PRIVATE_KEY_PATH=./keys/private.pem
PUBLIC_KEY_PATH=./keys/public.pem

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Production overrides (copy to .env.production)
# NODE_ENV=production
# DB_HOST=production-mariadb-host
# DB_PASSWORD=production-secure-password
# JWT_SECRET=production-ultra-secure-jwt-secret-key
# API_KEY=production-central-bank-api-key
LOG_LEVEL=info
